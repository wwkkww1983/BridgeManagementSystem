@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "后台";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title></title>
    <link rel="stylesheet" href="../layui/css/layui.css">
</head>

<body>
    <div class="layui-layout layui-layout-admin" id="face">
        <div class="layui-header">
            <div class="layui-logo">
                <img src="~/images/logo.jpg" style="width:30px;height:30px" alt="图片加载失败..." title="logo" />
                桥梁信息管理系统
            </div>
            <!-- 头部区域 -->
            <ul class="layui-nav layui-layout-right">
                <li class="layui-nav-item"><a href="../Login/Index">退出登录</a></li>
            </ul>
        </div>

        <!-- 左边导航页面 -->
        <div class="layui-side layui-bg-black">
            <ul class="layui-side-scroll layui-nav layui-nav-tree">
                <li class="layui-nav-item"><a onclick="setSrc('/Bridge/Index')">桥梁信息管理</a></li>
                <li class="layui-nav-item"><a onclick="setSrc('/BridgeState/Index')">管养信息查看</a></li>
                <li class="layui-nav-item"><a onclick="setSrc('/StateRegister/Index')">管养信息登记</a></li>
            </ul>
        </div>

        <!-- 主体显示的地方 -->
        <div class="layui-body" id="body">
            <iframe id="iframeMain" src="" frameborder="0" style="width:100%;height:100%;" class="layadmin-iframe"></iframe>
        </div>

        <div class="layui-footer" align="center">
            <!-- 底部固定区域 -->
            © @DateTime.Now.Year - <a href="http://www.gdjky.com/" title="联系我们">广东省建筑科学研究院路桥研究所</a>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="../layui/layui.js"></script>
    <script src="~/Scripts/Home/home.js"></script>
</body>
</html>